# Scripts - Always use LF
/mvnw text eol=lf
*.sh text eol=lf

# Windows batch files - Use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation - Normalize to LF
*.md text eol=lf
README.md text eol=lf
LICENSE text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Configuration files - Normalize to LF
*.properties text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.gradle text eol=lf
pom.xml text eol=lf
angular.json text eol=lf
tsconfig.json text eol=lf
package.json text eol=lf

# Source code - Normalize to LF
*.java text eol=lf
*.ts text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Binary files - Do not normalize
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.db binary